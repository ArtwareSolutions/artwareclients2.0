<h1>Listing artworks</h1>

<table  class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Medium</th>
      <th>Dimensions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.title %></td>
        <td><%= artwork.year %></td>
        <td><%= artwork.medium %></td>
        <td><%= artwork.dimensions %></td>
        <td><%= link_to '', artwork, :class => 'glyphicon glyphicon-picture' %></td>
        <td><%= link_to '', edit_artwork_path(artwork), :class => 'glyphicon glyphicon-pencil' %></td>
        <td><%= link_to '', artwork, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'glyphicon glyphicon-trash'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artwork', new_artwork_path, :class => 'btn btn-primary'  %>
