<h1>Listing exhibitions</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Site</th>
      <th>City</th>
      <th>Opening</th>
      <th>Closing</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibitions.each do |exhibition| %>
      <tr>
        <td><%= exhibition.title %></td>
        <td><%= exhibition.site %></td>
        <td><%= exhibition.city %></td>
        <td><%= exhibition.opening %></td>
        <td><%= exhibition.closing %></td>
        <td><%= exhibition.comment %></td>
        <td><%= link_to 'Show', exhibition %></td>
        <td><%= link_to 'Edit', edit_exhibition_path(exhibition) %></td>
        <td><%= link_to 'Destroy', exhibition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

